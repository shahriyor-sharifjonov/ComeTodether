mixin header()
  header.header 
    navbar.header__nav.container
      a(href="index.html").header__logo
        img(src="images/logo.webp", alt="ComeTogether").header__logo-img
      .header__menu
        ul.header__list
          li.header__li 
            a(href="index.html").header__link.current Головна
          li.header__li 
            a(href="about.html").header__link Про школу
          li.header__li 
            a(href="teachers.html").header__link Викладачі
          li.header__li 
            a(href="kurs.html").header__link Курс
          li.header__li 
            a(href="index.html#prices").header__link Ціни
          li.header__li 
            a(href="contact.html").header__link Контакти
        a(href="forming.html").header__btn Пробне заняття 
      button.header__button 
        span.header__button-line

